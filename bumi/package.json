{
  "name": "bumi",
  "version": "0.1.0",
  "description": "Pure TypeScript implementation of xDS Unified Matcher API",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./http": "./src/http/index.ts",
    "./testing": "./src/testing.ts"
  },
  "scripts": {
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ tests/",
    "fmt": "biome format --write src/ tests/",
    "fmt:check": "biome format --check src/ tests/",
    "bench": "bun run bench/evaluate.bench.ts && bun run bench/compile.bench.ts && bun run bench/redos.bench.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9",
    "@types/bun": "^1.2",
    "@types/js-yaml": "^4.0",
    "js-yaml": "^4.1",
    "mitata": "^1.0.34",
    "typescript": "^5.7"
  },
  "license": "MIT"
}
